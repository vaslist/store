@model OrderModel
@{
    ViewData["Title"] = "Заказ оформлен";
}

<h1>Заказ оформлен</h1>
<p> 
    Мы собираем его, чтобы передать в службу доставки.
    Ждите SMS.


    <table class="table table-sm table-striped">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Автор</th>
                <th scope="col">Название</th>
                <th scope="col">Количество</th>
                <th scope="col">Цена</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Items.Length; i++)
            {
                <tr>
                    <td class="text">@(i + 1)</td>
                    <td>@Model.Items[i].Author</td>
                    <td>@Model.Items[i].Title</td>
                    <td class="text-end">@Model.Items[i].Count</td>
                    <td class="text-end">@Model.Items[i].Price</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end">Итого</td>
                <td class="text-end">@Model.TotalCount</td>
                <td class="text-end">@Model.TotalPrice</td>
            </tr>
        </tfoot>
    </table>

</p>
<strong>Доставка</strong>
<pre>
@Model.DeliveryDescription
</pre>
<strong>Оплата</strong>
<pre>
@Model.PaymentDescription
</pre>

<p>
    <a href="@Url.Action("Index","Home")">Вернуться в магазин</a>
</p>
